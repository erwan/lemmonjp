caper = #D6E89C
coralreef = #cabfa8

* html body {
    margin: 0 0 0 19px
    padding: 0
}

body {
  font-family: Lucida Grande, Verdana, sans-serif
  margin: 0
  padding: 0
}

.clear {
  clear: both
}

a {
  font-size: 12px
  color: #495865

  &:hover {
    color: #6F6F6F
  }
}

#rap {
  margin: 0 auto 0 auto
  width: 728px
  text-align: left
  border: 1px solid coralreef
  border-top: 0
  border-bottom: 0
  box-shadow: -13px 0 8px -8px coralreef, 13px 0 8px -8px coralreef
}

h1#header {
  z-index: 1
  background: url(images/top.jpg)
  width: 729px
  height: 150px
  margin: 0
  padding: 0
  text-align: left

  a {
    position: relative
    top: 115px
    left: 11px
    font-size: 27px
    background: transparent
    padding: 5px
    color: #F6FFB7
    text-decoration: none

    &:hover {
      font-size: 27px
      background: transparent
      padding: 5px
      color: #FFFFFF
      text-decoration: none
    }
  }
}

#cols {
  display: table
}

#content {
  display: table-cell
  padding: 0 0 0 20px
  margin: 10px 10px 50px 0
  color: #495865
  font-size: 11px

  h2 {
    border-bottom: 1px solid #6F6F6F
    color: #698964
    font-size: 12px
    margin: 20px 0 5px 0
    padding: 0 0 3px 0
    text-align: right
    width: 490px
  }

  h2#comments a {
    color: #5F707A
    font-size: 14px
  }

  h3 img {
    border: 0
  }

  p {
    font-size: 12px
  }

  div.post {
    margin: 0 0 20px 0
    padding: 0

    p, li {
      font-family: Lucida Grande, Verdana, sans-serif
      font-size: 12px
      line-height: 130%
    }

    div.storycontent {
      p {
        width: 90%
      }

      ul, ol {
        margin-left: 0
        padding-left: 0
      }

      li {
        margin-left: 30px
        width: 80%
      }

      blockquote {
        background: #fef7e9
        border: 1px solid #e6ddcb
        border-left: 2px solid #6F6F6F
        font-family: Georgia, Times New Roman, serif
        font-size: 11px
        margin-left: 20px
        padding: 4px 4px 4px 7px
        width: 80%
      }
    }
  }

  h3 {
    margin: 0 0 5px 0
    padding: 0

    &.storytitle, #content h3.storytitle a {
      font-size: 14px
      color: #698964
      text-decoration: none
    }

    &.storytitle a:hover {
      color: #495865
      text-decoration: none
    }

  }

  div.post {
    p {
      width: 90%
    }

    div.meta, #content div.post div.meta a {
      color: #867b64
      font-family: Lucida Grande, Verdana, sans-serif
      font-size: 10px
    }

    div.meta li a:hover {
      color: #686050
    }

    div.meta ul, #content div.post div.meta li {
      display: inline
      margin: 0
      padding: 0
    }

    div.feedback {
      font-size: 12px
    }
  }

  code {
    color: #800000
  }

  ul {
    display: inline
    margin: 0
    padding: 0
    list-style-type: circle
  }
}

#navcontainer {
  padding: 0
  margin: 0 0 0 0
  background: #698964
  border-top: 1px solid #DFDFDF
  border-bottom: 1px solid #DFDFDF
  float: left
  width: 729px
  font: 15px arial, helvetica, sans-serif

  li {
    display: inline

    &.page_item a {
      padding: 10px 14px 11px 14px
      background: #D6E89C
      color: #005F00
      text-decoration: none
      font-weight: bold
      float: left
      border-right: 1px solid #FFFFFF

      &:hover {
        color: #FFFFFF
        background: #C9C0B0
      }
    }

    &.current_page_item a {
      padding: 10px 14px 11px 14px
      background: #C9C0B0
      color: #FFFFFF
      text-decoration: none
      float: left
      border-right: 1px solid #DFDFDF
    }

    li.current_page_item a:hover {
      background: #6F6F6F
    }
  }
}

#menu {
  display: table-cell
  padding: 20px 10px
  width: 170px
  background-color: caper
  box-shadow: -13px 0 8px -8px coralreef

  ul {
    list-style-type: none
    margin: 10px 0
    padding: 0

    li {
      color: #495865
      margin: 0
      padding: 0

      p {
        font-size: 12px
        width: 160px
        font-weight: bold
      }

      h2 {
        border-bottom: 1px solid
        width: 170px
        font-size: 15px
        font-weight: bold
        margin: 0
        padding: 0
      }
    }
  }

  h2 {
    text-align: center
  }

  ul li ul {
    margin: 5px 0 15px 10px
  }

  ul li ul li {
    font-weight: normal
    margin: 0 0 3px 0
    padding: 0
    line-height: 12px
  }

  ul li#winamp ul li {
    width: 190px
  }

  ul li ul li a {
    font-size: 11px
    color: #495865
    text-decoration: none
  }

  ul li ul li a:hover {
    font-weight: bold
    text-decoration: none
  }
}

#calendar {
  font-size: 12px
}

#calendar_wrap {
  margin: 0 10px 0 10px
}

#search {
  text-align: center
}

p.credit {
  color: #FFFFFF
  background: #698964
  border-top: 1px solid #DFDFDF
  text-align: center
  clear: both
  font-size: 12px
  margin: 0 auto 0 auto
  padding: 16px 0 17px 0
  width: 729px

  a {
    color: #ffffff
  }
}

#nakanohito {
  text-align: right
  margin: 0
  padding: 0
}

/* Google search */
.gsc-control-cse {
    padding: 0 !important
    background-color: transparent !important
    border: none !important
}

.gsc-search-button input {
    padding: 6px 12px !important
}
